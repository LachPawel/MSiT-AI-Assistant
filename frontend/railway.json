{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "buildCommand": "docker build -t frontend ."
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyMaxRetries": 10,
    "healthchecks": {
      "enabled": true,
      "interval": 30,
      "timeout": 10
    }
  }
}
